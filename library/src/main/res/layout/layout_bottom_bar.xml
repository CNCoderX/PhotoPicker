<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#EF2B2C30">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:divider="@drawable/bottom_bar_divider"
        app:dividerPadding="10sp"
        app:showDividers="middle">

        <TextView
            android:id="@+id/tv_bottom_bar_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:textColor="@color/gallery_text_color_selector"
            tools:text="pre"/>

        <TextView
            android:id="@+id/tv_bottom_bar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:textColor="@color/gallery_text_color_selector"
            tools:text="next"/>
    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_bottom_bar_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        tools:text="ok"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/gallery_button_selector"/>
</RelativeLayout>